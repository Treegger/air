<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark"
				autoDrawBackground="false" 

>
	<fx:Declarations>
	</fx:Declarations>

	<s:states>
		<s:State name="normal" />
		<s:State name="hovered" />
	</s:states>
	
	<s:Group>
		<s:Rect id="rect" top="2" bottom="2" radiusX="8" radiusY="8"  width="100%">
			<s:fill>
				<s:SolidColor color="0xffffff" alpha="1" alpha.hovered="0.8"/>
			</s:fill>
		</s:Rect>
		<s:Label text="{data.lastName} {data.firstName}" top="5" bottom="2" left="10" right="10"/>
		
	</s:Group>
</s:ItemRenderer>
